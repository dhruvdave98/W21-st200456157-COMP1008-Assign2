<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CountryDetailsViewController">
   <children>
      <HBox layoutX="14.0" layoutY="14.0" prefHeight="219.0" prefWidth="887.0" spacing="30.0">
         <children>
            <ImageView fx:id="flagImage" fitHeight="204.0" fitWidth="286.0" pickOnBounds="true" preserveRatio="true" />
            <GridPane prefHeight="219.0" prefWidth="268.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="143.0" minWidth="10.0" prefWidth="139.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="112.0" minWidth="10.0" prefWidth="111.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <Label text="Population" />
                  <Label text="Currency" GridPane.rowIndex="1" />
                  <Label fx:id="populationLabel" text="Label" GridPane.columnIndex="1" />
                  <Label fx:id="currencyLabel" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Label text="Continent" GridPane.rowIndex="2" />
                  <Label fx:id="continentLabel" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <Label text="GDP" GridPane.rowIndex="3" />
                  <Label fx:id="countryGdpLabel" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="3" />
               </children>
            </GridPane>
            <ListView fx:id="countryListView" onMouseClicked="#listViewSelectCountry" prefHeight="219.0" prefWidth="271.0" />
         </children>
      </HBox>
      <VBox layoutX="66.0" layoutY="249.0" prefHeight="291.0" prefWidth="567.0" stylesheets="@styles.css">
         <children>
            <TextArea fx:id="historyTextArea" prefHeight="327.0" prefWidth="568.0" wrapText="true" />
         </children>
      </VBox>
      <StackPane layoutX="320.0" layoutY="561.0">
         <children>
            <Button mnemonicParsing="false" onAction="#createCountryButton" text="Create new Country" />
         </children>
      </StackPane>
   </children>
</AnchorPane>
